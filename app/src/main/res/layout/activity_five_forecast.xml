        android:textAppearance="@android:style/TextAppearance.Medium"
        app:layout_constraintBottom_toTopOf="@+id/btn_current"
        app:layout_constraintStart_toEndOf="@+id/pic_4" />

    <TextView
        android:id="@+id/txt_description1"
