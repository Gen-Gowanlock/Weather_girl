        android:textAppearance="@android:style/TextAppearance.Medium"
        app:layout_constraintEnd_toStartOf="@+id/txt_description1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/pic_1"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/txt_temp2"
        android:layout_width="39dp"
        android:layout_height="24dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Medium"
        app:layout_constraintBottom_toTopOf="@+id/txt_temp3"
        app:layout_constraintStart_toEndOf="@+id/pic_2"
        app:layout_constraintTop_toBottomOf="@+id/txt_temp1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_temp3"
        android:layout_width="37dp"
